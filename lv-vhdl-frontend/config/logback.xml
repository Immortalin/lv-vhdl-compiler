<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{0} | %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="STD_CALL_TRACE" level="ALL" additivity="false">
        <appender class="ch.qos.logback.core.FileAppender">
            <file>../examples/vhdl2lv/std_call_trace.log</file>
            <append>false</append>
            <encoder>
                <pattern>%-5level | %msg%n</pattern>
            </encoder>
        </appender>
    </logger>

    <root level="ALL">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
